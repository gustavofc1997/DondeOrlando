<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_orders"
    tools:context=".ui.orders.OrdersFragment">

    <TextView
        android:id="@+id/txt_ventas_dia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/report_sales"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ventas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ventas_dia"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/sales_day"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_total_ventas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ventas_dia"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/txt_ventas_dia"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ventas"
        android:layout_marginTop="10dp"
        android:padding="10dp" />

    <Button
        android:id="@+id/button_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_orders"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textAllCaps="false"
        android:textSize="17sp"
        android:background="@drawable/button_custom"
        android:text="@string/close_sales"
        android:textColor="@android:color/white" />

</RelativeLayout>